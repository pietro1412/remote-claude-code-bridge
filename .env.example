# Server Configuration
PORT=3443
NODE_ENV=development

# JWT Secret (auto-generated on first run if not set)
JWT_SECRET=

# Tailscale
TAILSCALE_HOSTNAME=
TAILSCALE_CERT_DIR=./certs

# Database
DB_PATH=./data/rccb.db

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
